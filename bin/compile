#!/usr/bin/env bash

set -euo pipefail

readonly BUILD_DIR=$1

if [[ ! -n "${BUILD_DIR}" ]]; then
  echo "No build directory specified - exiting"
  exit 1
fi

cd ${BUILD_DIR}

# Delete node_modules contents, but skip bootstrap/ dir.
find ./node_modules/* -type f -o -type d -not -name 'bootstrap' -delete
