#!/usr/bin/env bash

set -euo pipefail

readonly BUILD_DIR=$1

if [[ ! -n "${BUILD_DIR}" ]]; then
  echo "No build directory specified. Exiting."
  exit 1
fi

cd ${BUILD_DIR}

echo "*** Deleting node_modules contents, but skipping /bootstrap/ dir."

find ./node_modules/* -path '*/.*' -type f -o -type d -not -name 'bootstrap' -print0 | xargs -0 -I {} rm -rf {} > /dev/null 2>&1;
